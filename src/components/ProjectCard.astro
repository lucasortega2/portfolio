---
interface Props {
  title: string;
  description: string;
  image: ImageMetadata;
  tags: string[];
  icons: string[];
  link: string;
}
import type { ImageMetadata } from 'astro';
import { Icon } from 'astro-icon/components';
import Image from 'astro/components/Image.astro';
const { title, description, image, tags, link, icons } = Astro.props;
---

<div
  class="bg-white dark:bg-gray-800 rounded-xl overflow-hidden shadow-md hover:shadow-lg transition-all duration-300 transform hover:scale-[1.01] border border-gray-100 dark:border-gray-700 flex flex-col h-full"
>
  <div
    class="relative overflow-hidden group aspect-[3/4] w-full flex justify-center items-center"
  >
    <Image
      src={image}
      alt={title}
      class="md:w-80 md:h-full h-auto object-cover rounded-lg m-auto p-6"
    />

    <div
      class="absolute inset-0 bg-black/30 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-center justify-center"
    >
      <div class="flex gap-4">
        {
          icons.map((icon) => (
            <div class="p-2 rounded-full opacity-0 transform translate-y-28 group-hover:opacity-100 group-hover:translate-y-0 transition-all duration-300">
              <Icon name={icon} size={40} class="text-white" />
            </div>
          ))
        }
      </div>
    </div>
  </div>

  <div class="p-6 flex flex-col flex-grow">
    <h3
      class="text-xl font-heading font-semibold mb-2 text-gray-900 dark:text-white"
    >
      {title}
    </h3>

    <p class="text-gray-600 dark:text-gray-300 mb-4 flex-grow">{description}</p>
    <p class="text-white mb-6">Otras tecnologias:</p>
    <div class="flex flex-wrap gap-2 mb-4">
      {
        tags.map((tag) => (
          <span class="px-4 py-2 bg-gray-900 text-white text-md rounded-full cursor-default">
            {tag}
          </span>
        ))
      }
    </div>

    {
      link && (
        <a
          href={link}
          target="_blank"
          rel="noopener noreferrer"
          class="text-accent font-medium hover:underline mt-auto inline-flex items-center"
        >
          Ver Proyecto
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-4 w-4 ml-1"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M14 5l7 7m0 0l-7 7m7-7H3"
            />
          </svg>
        </a>
      )
    }
  </div>
</div>
