<section id="skills" class="py-20 bg-gray-50">
  <div class="container mx-auto px-4">
    <div class="max-w-3xl mx-auto text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-heading font-bold mb-4">Technical Skills</h2>
      <div class="h-1 w-20 bg-gradient-to-r from-primary to-secondary rounded-full mx-auto mb-6"></div>
      <p class="text-gray-700">
        I specialize in modern web technologies, focusing on creating responsive, 
        efficient, and scalable applications.
      </p>
    </div>
    
    <div class="mb-16">
      <h3 class="text-2xl font-heading font-semibold mb-8 text-center">Frontend Development</h3>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {frontendTech.map(tech => (
          <TechCard {...tech} />
        ))}
      </div>
    </div>
    
    <div class="mb-16">
      <h3 class="text-2xl font-heading font-semibold mb-8 text-center">Backend Development</h3>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {backendTech.map(tech => (
          <TechCard {...tech} />
        ))}
      </div>
    </div>
    
    <div>
      <h3 class="text-2xl font-heading font-semibold mb-8 text-center">DevOps & Cloud</h3>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {devopsTech.map(tech => (
          <TechCard {...tech} />
        ))}
      </div>
    </div>
  </div>
</section>