---
const { images } = Astro.props;
import {Icon} from "astro-icon/components";

// Función para generar distribución angular basada en el número total de iconos
const getRotationOffset = (totalIcons) => {
  return 360 / totalIcons;
};
---

<div class="w-max h-max m-auto py-12">
  <div class="carousel-container">
    {
      images.map((image: any, index: number) => {
        const totalIcons = images.length;
        const rotationOffset = getRotationOffset(totalIcons);
        
        return (
          <div 
            class="tarjeta"
            data-name={image.name || ""}
            style={`animation-delay: ${-index * (14/totalIcons)}s;`}
          >
            <div class="icon-wrapper">
              <Icon name={image.icon} size={40} />
            </div>
            <div class="tooltip">{image.name || image.icon}</div>
          </div>
        )
      })
    }
    <div class="carousel-base"></div>
  </div>
</div>

<style>
  .carousel-container {
    perspective: 800px;
    width: 450px;
    height: 250px;
    position: relative;
    margin: 0 auto;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  
  .carousel-base {
    position: absolute;
    width: 300px;
    height: 100px;
    bottom: -20px;
    border-radius: 50%;
    background: radial-gradient(circle, rgba(30,41,59,0.5) 0%, rgba(30,41,59,0) 70%);
    transform: rotateX(90deg) translateZ(-30px);
    filter: blur(8px);
    z-index: -1;
  }

  .tarjeta {
    background-size: cover;
    position: absolute;
    width: 70px;
    height: 70px;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 16px;
    text-align: center;
    cursor: pointer;
    animation: Carrusel 14s linear infinite;
    transform-origin: center center;
    transform-style: preserve-3d;
    transition: all 0.3s ease;
    filter: drop-shadow(0 10px 8px rgb(0 0 0 / 0.04)) drop-shadow(0 4px 3px rgb(0 0 0 / 0.1));
  }

  .icon-wrapper {
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(8px);
    border-radius: 16px;
    border: 1px solid rgba(255, 255, 255, 0.2);
    transition: all 0.3s ease;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
  }

  .tarjeta:hover .icon-wrapper {
    transform: translateZ(10px) scale(1.1);
    border-color: rgba(255, 255, 240, 0.7);
    box-shadow: 
      0 0 15px rgba(255, 255, 0, 0.5),
      0 0 30px rgba(255, 255, 0, 0.3),
      inset 0 0 15px rgba(255, 255, 255, 0.3);
    background: rgba(255, 255, 255, 0.2);
  }

  

  .tooltip {
    position: absolute;
    bottom: -30px;
    left: 50%;
    transform: translateX(-50%) translateY(10px);
    background: rgba(0, 0, 0, 0.8);
    color: white;
    padding: 4px 8px;
    border-radius: 4px;
    font-size: 12px;
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease;
    white-space: nowrap;
    pointer-events: none;
  }

  .tarjeta:hover .tooltip {
    opacity: 1;
    visibility: visible;
    transform: translateX(-50%) translateY(0);
  }

  @keyframes Carrusel {
    from {
      transform: rotateY(360deg) translateZ(180px) translateY(-15px);
      z-index: 10;
      opacity: 1;
    }
    25% {
      transform: rotateY(270deg) translateZ(180px) translateY(0px);
      z-index: 5;
      opacity: 0.8;
    }
    50% {
      transform: rotateY(180deg) translateZ(180px) translateY(15px);
      z-index: -10;
      opacity: 0.6;
    }
    75% {
      transform: rotateY(90deg) translateZ(180px) translateY(0px);
      z-index: 5;
      opacity: 0.8;
    }
    to {
      transform: rotateY(0deg) translateZ(180px) translateY(-15px);
      z-index: 10;
      opacity: 1;
    }
  }

</style>